<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weak_main_background"
    android:tileMode="repeat"
    tools:context=".ViewPost">


    <ImageView
        android:id="@+id/backImage"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:alpha="0.2"
        android:gravity="center"
        android:src="@drawable/empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Players"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="City"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/TextView1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Date"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Time"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/TextView1"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Game"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/TextView1"
        app:layout_constraintTop_toBottomOf="@+id/TextView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Category"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/TextView1"
        app:layout_constraintTop_toBottomOf="@+id/TextView2" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Organizer"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/organizerTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="2dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/TextView1"
        app:layout_constraintTop_toTopOf="@+id/TextView1" />

    <TextView
        android:id="@+id/gameTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/organizerTextView"
        app:layout_constraintTop_toTopOf="@+id/TextView2" />

    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/organizerTextView"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/organizerTextView"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/organizerTextView"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/organizerTextView"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/playersTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/organizerTextView"
        app:layout_constraintTop_toTopOf="@+id/textView7" />


    <Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button"
        android:text="Join"
        android:textColor="@color/action_bar_icons"
        app:layout_constraintEnd_toEndOf="@+id/descriptionLayout"
        app:layout_constraintStart_toStartOf="@+id/descriptionLayout"
        app:layout_constraintTop_toBottomOf="@+id/descriptionLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Description:"
        android:textColor="@color/blackish"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/TextView1"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/goingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Attending"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionLayout" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/descriptionLayout"
        app:layout_constraintEnd_toEndOf="@+id/descriptionLayout"
        app:layout_constraintStart_toStartOf="@+id/descriptionLayout"
        app:layout_constraintTop_toTopOf="@+id/descriptionLayout" />

    <RelativeLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>